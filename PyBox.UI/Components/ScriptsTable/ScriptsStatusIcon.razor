@if (Item != null)
{
    <span class="oi oi-lock-@(Deleting ? "unlocked text-secondary" : Item.Enabled ? "unlocked text-success" : "locked text-danger")"
        style="cursor: help;"
          title="@(Deleting ? "Script being deleted" : Item.Enabled ? "Execution ENABLED" : "Execution DISABLED")" />
}