@if (Title != null)
{
    <Modal Title=@Title ConfirmLable=@ConfirmLable ConfirmCssColor=@ButtonColor OnExit=@OnExit>
        <ModalBody>
            @if (Message != null)
            {
                @for (int i = 0; i < messages.Length - 1; i++)
                {
                    @messages[i]

                    <br />
                }
                @messages[messages.Length - 1]
            }
        </ModalBody>
    </Modal>
}
