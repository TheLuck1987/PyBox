@if (Title != null)
{
    <Modal TitleIcon=@TitleIcon HideCancelButton=true Title=@Title OnExit=@OnExit>
        <ModalBody>
            @if (Message != null)
            {
                @for (int i = 0; i < messages.Length - 1; i++)
                {
                    @messages[i]<br /> 
                }
                @messages[messages.Length - 1]
            }
        </ModalBody>
    </Modal>

}